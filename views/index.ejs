<% include ./partials/header %>

<div class="ui main text container">
    <div class=" ui attached segment">
        <div class="ui divided items">
            <%blogs.forEach(function(blog) {%>
            <hr>
            <div class="post">
                <div class="item">
                    <div class="image">
                        <img class="post-image" src="<%=blog.image%>">
                    </div>
                </div>
                <div class="blog">
                    <div class="content">
                        <a class="header" href="/<%-blog.id%>">
                            <%=blog.title%></a>
                        <div class="author">
                            <p>
                                <%=blog.author%>
                            </p>
                        </div>
                    </div>
                    <div class="meta">
                        <span>
                            <%=blog.created.toDateString()%></span>
                    </div>
                    <div class="description">
                        <p>
                            <%-blog.content.substring(0,100)%>...</p>
                    </div>
                    <div class="extra">
                        <a class="ui floated basic green button" href="/blogs/<%-blog.id%>">Read more<i class="right chevron icon"></i></a>
                    </div>
                </div>
            </div>
            <hr>
            <%})%>
        </div>
    </div>
</div>

<% include ./partials/footer %>