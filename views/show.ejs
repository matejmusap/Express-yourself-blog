<% include ./partials/header %>

<div class="new ui main text container">
    <div class="ui top attached segment">
        <div class="ui huge header"><h2><%=blog.title%></h2></div>
        <div class="item">
            <img class="ui centred rounded image" src="<%=blog.image%>">
            <div class="content">
                <span><%=blog.created.toDateString()%></span>
            </div>
            <div class="description">
                <p><%=blog.content%></p>
            </div>
            <a class="ui orange basic button" href="/blogs/<%=blog._id%>/edit">Edit</a>
            <form id="delete" action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
                <button class="ui classic red button">Delete</button>
            </form>
        </div>
    </div>
</div>

<% include ./partials/footer %>    