<% include ./partials/header %>

<div class="ui main text container">
    <div class="ui huge header">
        <h2>Edit <span id="edit_title"><%=blog.title%></span></h2>
        <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[title]" value="<%=blog.title%>">
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" name="blog[image]" value="<%=blog.image%>">
            </div>
            <div class="field">
                <label>Blog content</label>
                <textarea name="blog[content]"><%=blog.content%></textarea>
            </div>
            <input class="ui violet basic button" type="submit">
        </form>
    </div>
</div>

<% include ./partials/footer %>